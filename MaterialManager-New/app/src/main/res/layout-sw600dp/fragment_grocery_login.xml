<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grocery_login"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_grocery_list_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_iron_ring" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_grocery_list_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/title_grocery_name"
                        android:textColor="@color/GK"
                        android:textSize="@dimen/font_size_medium"
                        android:textStyle="bold" />

                    <AutoCompleteTextView
                        android:id="@+id/act_grocery_list_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_grocery_list_name"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:inputType="text"
                        android:maxLines="1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp">

                    <RelativeLayout
                        android:id="@+id/rl_pick_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_store_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_action_location" />

                        <TextView
                            android:id="@+id/tv_pick_address_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_store_address"
                            android:text="@string/title_store_address_hint"
                            android:textColor="@color/GK"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_pick_address"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp">

                        <CheckBox
                            android:id="@+id/cb_nearby_alert_enable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:checked="false" />

                        <TextView
                            android:id="@+id/tv_alert_nearby_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/cb_nearby_alert_enable"
                            android:text="@string/title_nearby_alert"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/light_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_iron_ring" />

                <LinearLayout
                    android:id="@+id/ll_locationDetailsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_store_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_store_name_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="@string/title_store_name_label"
                            android:textColor="@color/GK"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/act_store_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:hint="@string/title_store_name_label_hint"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_addressLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="9dp"
                            android:text="@string/title_address_label"
                            android:textColor="@color/GK"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <AutoCompleteTextView
                                android:id="@+id/act_addressText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1.0"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:hint="@string/title_store_address_label_hint"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size_medium" />

                            <ImageView
                                android:id="@+id/iv_navigateButton"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="16dp"
                                android:layout_weight="0.0"
                                android:gravity="center_vertical"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_action_navigate_green" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_phoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_phoneLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:text="@string/title_address_phone_label"
                            android:textColor="@color/GK"
                            android:textSize="@dimen/font_size_medium"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal">

                            <AutoCompleteTextView
                                android:id="@+id/act_phoneText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1.0"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:hint="@string/title_address_phone_label_hint"
                                android:inputType="phone"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size_medium" />

                            <ImageView
                                android:id="@+id/iv_phoneButton"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="16dp"
                                android:layout_weight="0.0"
                                android:gravity="center_vertical"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_action_phone_start"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_timingsDetailsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_timingsLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_store_service_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_opensAt"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text="@string/title_store_open_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_closesBy"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:text="@string/title_store_close_time"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_size_medium"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_monLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_monLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_mon"
                                android:textColor="@color/GK"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btn_monTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btn_monPMTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tueLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_tueLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_tue"
                                android:textColor="@color/GK"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btn_tueTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btn_tuePMTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wedLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_wedLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_wed"
                                android:textColor="@color/GK"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btn_wedTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btn_wedPMTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_thuLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_thuLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_thu"
                                android:textColor="@color/GK"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btn_thuTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btn_thuPMTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_friLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_friLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_fri"
                                android:textColor="@color/GK"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btn_friTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btn_friPMTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_satLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_satLabel"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|center"
                                android:gravity="left|center"
                                android:text="@string/title_sat"
                                android:textColor="@color/GK"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btn_satTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="5dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0.0"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <Button
                                android:id="@+id/btn_satPMTimings"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/gray_rounded_button_shape"
                                android:gravity="center"
                                android:text="@string/title_service_time_default"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_sunLayout"
