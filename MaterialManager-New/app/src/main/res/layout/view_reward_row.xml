                    <!--<TextView-->
                        <!--android:id="@+id/offerCodeValueTextView"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:text=""-->
                        <!--android:textColor="#ff323635"-->
                        <!--android:textSize="13.0sp" />-->
                <!--</LinearLayout>-->

                <ImageView
                    android:id="@+id/couponMenuButton"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|center|right"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="22dp"
                    android:gravity="bottom|center|right"
                    android:scaleType="center"
                    android:src="@drawable/reward_menu_button_states" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/giftCardLayout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/gift_card_background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/giftCardNameLayout"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/giftCardAlertSetIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="0.0"
                    android:gravity="center|right"
                    android:scaleType="centerInside"
                    android:src="@drawable/alarm_notification_black" />

                <TextView
                    android:id="@+id/giftCardNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Shoprite"
                    android:textColor="#ff000000"
                    android:textSize="22.0sp" />

                <ImageView
                    android:id="@+id/giftPhotoIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="13dp"
                    android:gravity="center|right"
                    android:scaleType="centerInside"
                    android:src="@drawable/picture_dark" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/giftCardBarcodeImageView"
                android:layout_width="400dp"
                android:layout_height="43dp"
                android:layout_below="@+id/giftCardNameLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/gk_barcode_grey" />

            <TextView
                android:id="@+id/giftCardBarcodeValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_below="@+id/giftCardBarcodeImageView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="1234567890"
                android:textColor="@drawable/text_color_selector"
                android:textSize="14.0sp" />

            <LinearLayout
                android:id="@+id/giftCardBalanceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginBottom="21.5dip"
                android:layout_marginLeft="32dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/giftCardBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="BALANCE"
                    android:textColor="#ff989998"
                    android:textSize="9.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/giftCardBalanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_gravity="center|top"
                    android:gravity="center|top"
                    android:text="$198.98"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/giftCardExpiryLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="21.5dip"
                android:layout_marginRight="32dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/giftCardExpiryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="EXPIRES"
                    android:textColor="#ff989998"
                    android:textSize="9.0sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/giftCardExpiryTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_gravity="center|top"
                    android:gravity="center|top"
                    android:text="01/10/2014"
                    android:textColor="#ffffffff"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/giftCardPINTextView"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="12.5dip"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="PIN# 1264"
                android:textColor="#ff000000"
                android:textSize="12.0sp" />

            <ImageView
                android:id="@+id/giftCardMenuButton"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:layout_marginTop="-33dp"
                android:layout_weight="0.0"
                android:gravity="bottom|center|right"
                android:scaleType="center"
                android:src="@drawable/reward_menu_button_states" />
        </RelativeLayout>
    </LinearLayout>

