        <LinearLayout
            android:id="@+id/rewardCardLayout"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/reward_card_background"
            android:gravity="center"
            android:orientation="vertical">


            <!--android:layout_gravity="center"-->
            <!--android:gravity="center"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal">
                <!--android:layout_centerInParent="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_toLeftOf="@+id/rewardPhotoIcon"-->
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_toLeftOf="@+id/rewardPhotoIcon"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="#ff000000"
                    android:textSize="22.0sp"
                    android:textStyle="bold"
                    android:text="Shoprited"/>

                <ImageView
                    android:id="@+id/rewardPhotoIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|right"
                    android:scaleType="centerInside"
                    android:src="@drawable/picture_dark" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/barcodeImageView"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.0"
                android:gravity="center"
                android:scaleType="center"
                android:background="@null"
                android:src="@null" />

            <TextView
                android:id="@+id/barcodeValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="1234567890"
                android:textColor="@drawable/text_color_selector"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/rewardNoteTextView"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="3dp"
                android:gravity="bottom|center"
                android:text=""
                android:textColor="#ff959595"
                android:textSize="10.0sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:layout_marginTop="-43dp"
                android:layout_weight="0.0"
                android:gravity="bottom|center|right"
                android:scaleType="center"
                android:src="@drawable/reward_menu_button_states" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/couponLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
