                    android:layout_gravity="center|right"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|right"
                    android:scaleType="centerInside"
                    android:src="@drawable/picture_dark" />
            </RelativeLayout>

