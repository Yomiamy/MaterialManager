                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/coupon_divider" />

            <TextView
                android:id="@+id/couponValueTextView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="50% OFF ANY ITEM "
                android:textColor="#ff89a923"
                android:textSize="22.0sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/coupon_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="32dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/couponExpiryTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="16dp"
                        android:background="#ffa8b1b0"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="EXPIRES 9/30/2013"
                        android:textColor="#ffdee3e6"
                        android:textSize="12.0sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/couponNoteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:layout_gravity="center|top"
                        android:gravity="center|top"
                        android:text="This is a note"
                        android:textColor="#ff323635"
                        android:textSize="10.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/couponBarcodeLayout"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="44dp"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/couponBarcodeImageView"
                        android:layout_width="132dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0.0"
                        android:gravity="left"
                        android:scaleType="center"
                        android:src="@null" />

                    <TextView
                        android:id="@+id/couponBarcodeValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ff323635"
                        android:textSize="12.0sp" />
                </LinearLayout>

                <!--<LinearLayout-->
                    <!--android:id="@+id/offerCodeLayout"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_gravity="left"-->
